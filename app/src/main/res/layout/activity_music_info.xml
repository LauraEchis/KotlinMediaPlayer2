<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MediaListActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageButton
                    android:src="@android:drawable/ic_input_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/fastNoteButton" android:layout_weight="1"
                    android:contentDescription="@string/for_fast_notes"
                    android:background="@android:color/transparent"/>
            <ImageButton
                    android:src="@android:drawable/ic_menu_revert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/shuffleButton" android:layout_weight="1"
                    android:contentDescription="@string/shuffle_songs" android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/listSongsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ListView
                    android:id="@+id/listAllSong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"></ListView>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>